<!--Para utilizar os TagHelpers | apontando para a classe-->
@model ContactViewModel
@{ 
    ViewBag.Title = "Contact Us";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div id="theForm">
    <form method="post">
        <!--<div asp-validation-summary="All"></div>-->
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Name">Your Name:</label>
        </br>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
        </br>
        <label asp-for="Email">Your Email:</label>
        </br>
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email"></span>
        </br>
        <label asp-for="Subject">Subject:</label>
        </br>
        <input type="text" name="subject" />
        <span asp-validation-for="Subject"></span>
        </br>
        <label asp-for="Message">Your Message:</label>
        </br>
        <textarea rows="4" name="message"></textarea>
        <span asp-validation-for="Message"></span>
        </br>
        <input type="submit" value="Send Message" />
        </br>
        <div>@ViewBag.UserMessage</div>
    </form>
</div>