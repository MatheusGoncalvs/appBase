<!--Define o tipo de modelo que estamos utilizando. Sabendo o tipo haverá o Intellisense para ajudar-->
@model IEnumerable<Product>

<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
    <div class="col-md-3">
        <div class="border bg-light rounded p-1">
            <img src="~/imgs/@(p.ArtId).jpg" class="img-fluid" alt="@p.Title" />
            <h3>@p.Category - @p.Size</h3>
            <ul class="product-props">
                <li><strong>Price: </strong>$@p.Price</li>
                <li><strong>Artist: </strong>@p.Artist</li>
                <li><strong>Title: @p.Title</strong></li>
                <li><strong>Description: @p.ArtDescription</strong>Self-portrait</li>
            </ul>
            <button class="btn btn-success">Buy</button>
        </div>
    </div>
    }
</div>
